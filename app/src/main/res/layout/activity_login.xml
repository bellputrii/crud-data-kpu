<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blueteal"
    android:padding="16dp">

    <!-- Icon -->
    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="280dp"
        android:src="@drawable/logo_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <!-- Short Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Apps ini di gunakan oleh petugas KPU untuk mendata peserta pemilu"
        android:textSize="17sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <!-- Username Input -->
    <EditText
        android:id="@+id/et_username_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="text"
        android:backgroundTint="@color/graysoft"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/et_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:backgroundTint="@color/graysoft"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <!-- Login Button -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="@color/blueteal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp" />

    <!-- Register Link -->
    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum memiliki akun? Daftar disini"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
