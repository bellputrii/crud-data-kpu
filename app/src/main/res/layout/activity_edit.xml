<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:background="@color/blueteal"
    tools:context=".EditActivity">
    <TextView
        android:id="@+id/txt1_datapemilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Data KPU"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="30dp"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/tv1_add_namapemilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Nama Pemilih"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textAlignment="textStart"
            android:hint="Masukkan Nama Pemilih"
            android:inputType="text"
            android:padding="13dp" />

        <TextView
            android:id="@+id/tv1_add_nik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="NIK"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textAlignment="textStart"
            android:hint="Masukkan NIK"
            android:inputType="text"
            android:padding="13dp" />

        <TextView
            android:id="@+id/tv1_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Gender"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/radio1_laki2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Laki-Laki"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio1_perempuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Perempuan"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv1_alamat_pemilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Alamat"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textAlignment="textStart"
            android:hint="Masukkan Alamat"
            android:inputType="text"
            android:padding="13dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Perbarui"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:background="@color/white"
        android:textColor="@color/blueteal"
        android:padding="15dp"
        android:elevation="5dp" />

</LinearLayout>